# AI Model Configurations

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4  # Options: gpt-4, gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_TOP_P=0.9
OPENAI_TIMEOUT=30
OPENAI_MAX_RETRIES=3

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229  # Options: claude-3-sonnet-20240229, claude-3-sonnet-20240229-16k
ANTHROPIC_MAX_TOKENS=2000
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_TOP_P=0.9
ANTHROPIC_TIMEOUT=30
ANTHROPIC_MAX_RETRIES=3

# Google AI Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro  # Options: gemini-pro, gemini-pro-vision
GOOGLE_MAX_OUTPUT_TOKENS=2000
GOOGLE_TEMPERATURE=0.7
GOOGLE_TOP_P=0.8
GOOGLE_TIMEOUT=30
GOOGLE_MAX_RETRIES=3

# Cohere Configuration
COHERE_API_KEY=your_cohere_api_key_here
COHERE_MODEL=command-xlarge-nightly  # Options: command-xlarge-nightly, command-light-nightly
COHERE_MAX_TOKENS=500
COHERE_TEMPERATURE=0.7
COHERE_TOP_P=0.9
COHERE_TIMEOUT=30
COHERE_MAX_RETRIES=3

# HuggingFace Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=meta-llama/Llama-2-70b-chat  # Options: meta-llama/Llama-2-70b-chat, meta-llama/Llama-2-13b-chat, etc.
HUGGINGFACE_MAX_TOKENS=2000
HUGGINGFACE_TEMPERATURE=0.7
HUGGINGFACE_TOP_P=0.9
HUGGINGFACE_TOP_K=40
HUGGINGFACE_REPETITION_PENALTY=1.1
HUGGINGFACE_DO_SAMPLE=true
HUGGINGFACE_USE_CACHE=true
HUGGINGFACE_NUM_BEAMS=1
HUGGINGFACE_MAX_TIME=30
HUGGINGFACE_MIN_LENGTH=100
HUGGINGFACE_EARLY_STOPPING=false
HUGGINGFACE_PAD_TOKEN_ID=0
HUGGINGFACE_EOS_TOKEN_ID=2
HUGGINGFACE_TIMEOUT=30
HUGGINGFACE_MAX_RETRIES=3
HUGGINGFACE_USE_GPU=true  # Options: true, false
HUGGINGFACE_DEVICE=cuda  # Options: cuda, cpu, mps
HUGGINGFACE_MODEL_CACHE_DIR=~/.cache/huggingface/models

# Azure AI Configuration
AZURE_API_KEY=your_azure_api_key_here
AZURE_ENDPOINT=your_azure_endpoint
AZURE_MODEL=gpt-4  # Options: gpt-4, gpt-3.5-turbo, gpt-35-turbo-16k
AZURE_MAX_TOKENS=2000
AZURE_TEMPERATURE=0.7
AZURE_TOP_P=0.9
AZURE_TOP_K=40
AZURE_PRESENCE_PENALTY=0
AZURE_FREQUENCY_PENALTY=0
AZURE_STOP_SEQUENCES=  # Comma-separated list of stop sequences
AZURE_MAX_RETRIES=3
AZURE_TIMEOUT=30
AZURE_API_VERSION=2023-05-15-preview
AZURE_DEPLOYMENT_NAME=deployment1  # Your deployment name
AZURE_BATCH_SIZE=1
AZURE_MAX_CONCURRENCY=1
AZURE_ENABLE_LOGGING=false
AZURE_LOG_FILE_PATH=azure_ai.log

# AWS SageMaker Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
SAGEMAKER_ENDPOINT=your_sagemaker_endpoint
SAGEMAKER_MODEL=meta-textgeneration-llama-2-70b-chat  # Options: meta-textgeneration-llama-2-70b-chat, etc.
SAGEMAKER_MAX_TOKENS=2000
SAGEMAKER_TEMPERATURE=0.7
SAGEMAKER_TOP_P=0.9
SAGEMAKER_TOP_K=40
SAGEMAKER_REPETITION_PENALTY=1.1
SAGEMAKER_DO_SAMPLE=true
SAGEMAKER_NUM_RETURN_SEQUENCES=1
SAGEMAKER_MAX_TIME=30
SAGEMAKER_MIN_LENGTH=100
SAGEMAKER_EARLY_STOPPING=false
SAGEMAKER_TIMEOUT=30
SAGEMAKER_MAX_RETRIES=3
SAGEMAKER_MAX_CONCURRENCY=1
SAGEMAKER_ENABLE_LOGGING=false
SAGEMAKER_LOG_FILE_PATH=sagemaker.log
SAGEMAKER_USE_SSL=true
SAGEMAKER_VERIFY_SSL=true
SAGEMAKER_PROXY_HOST=  # Optional proxy host
SAGEMAKER_PROXY_PORT=  # Optional proxy port

# Default AI Model (set to one of: openai, anthropic, google, cohere, huggingface, azure, sagemaker)
DEFAULT_AI_MODEL=openai

# Global Configuration
MAX_SUMMARY_LENGTH=1000
SUMMARY_FORMAT=markdown  # Options: markdown, plain, html
INCLUDE_ACTION_ITEMS=true  # Options: true, false
INCLUDE_KEY_POINTS=true  # Options: true, false
INCLUDE_DECISIONS=true  # Options: true, false

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token

# Google API Configuration
GOOGLE_CREDENTIALS_FILE=credentials.json
GOOGLE_TOKEN_FILE=token.json

# Microsoft Office 365 Configuration
MS_CLIENT_ID=your_microsoft_client_id
MS_CLIENT_SECRET=your_microsoft_client_secret
MS_TENANT_ID=your_microsoft_tenant_id

# Webex Configuration
WEBEX_ACCESS_TOKEN=your_webex_access_token

# Optional: Timezone configuration (defaults to UTC)
TIMEZONE=America/Los_Angeles
